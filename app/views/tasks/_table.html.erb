<style>
  .table {
    width: 95%;
  }

  .button-cell {
    width: 80px;
  }

</style>

<table class="table table-hover">
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td class="button-cell"><%= link_to 'Show', task_path(task), class: "btn btn-primary" %></td>
      <td class="button-cell"><%= link_to 'Edit', edit_task_path(task), class: "btn btn-primary" %></td>
      <td class="button-cell">
        <%= link_to 'Delete', task_path(task), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>




